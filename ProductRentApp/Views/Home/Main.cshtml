@using Microsoft.AspNetCore.Http;
@model IList<ProductRentApp.Models.ListedProduct>
@inject IHttpContextAccessor HttpContextAccessor
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    @{ViewBag.kyc = HttpContextAccessor.HttpContext.Session.GetString("kyc"); }
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" style="border-radius: 25px; background-color: rgba(0,0,0,0); overflow: hidden;">
            <div class="carousel-item active">
                <img class="d-block w-100" style="height:500px;" src="https://s.rmjo.in/AC%20Offer%20Banner%20HP_.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:500px;" src="https://s.rmjo.in/WP-Web.png" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <hr />
    <div class="row">
        <div class="col-md-2">
            <div class="card" style="width: 11rem;border-radius:25px;">
                <div class="card-body text-center">
                    <img src="~/Images/air-conditioner.png" height="25" width="25" alt="Logo" />
                    <br />
                    <a class="card-text" href="@Url.Action("Main", "Home" , new {category="Home Appliances"})" style="font-family: 'Cambria Math'; font-weight: bold;">Home Appliances</a>
                </div>
            </div>
        </div>
        <br />
        <div class="col-md-2">
            <div class="card" style="width: 11rem; border-radius: 25px;">
                <div class="card-body text-center">
                    <img src="~/Images/car123.png" height="25" width="25" alt="Logo" />
                    <br />
                    <a class="card-text"  href="@Url.Action("Main", "Home" , new {category="AutoMobiles"})" style="font-family: 'Cambria Math'; font-weight: bold;">AutoMobiles</a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card" style="width: 11rem; border-radius: 25px;">
                <div class="card-body text-center">
                    <img src="~/Images/cell-phone.png" height="25" width="25" alt="Logo" />
                    <br />
                    <a class="card-text" href="@Url.Action("Main", "Home" , new {category="Mobiles and Tablets"})"  style="font-family:'Cambria Math';font-weight:bold;">SmartPhones</a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center" style="width: 11rem; border-radius: 25px;">
                <div class="card-body text-center">
                    <img src="~/Images/couch.png" height="25" width="25" alt="Logo" />
                    <br />
                    <a class="card-text" href="@Url.Action("Main", "Home" , new {category="Furniture and Decors"})" style="font-family: 'Cambria Math'; font-weight: bold;">Furnitures</a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center" style="width: 11rem; border-radius: 25px;">
                <div class="card-body text-center">
                    <img src="~/Images/monitor.png" height="25" width="25" alt="Logo" />
                    <br />
                    <a class="card-text" href="@Url.Action("Main", "Home" , new {category="Computer and Accessories"})" style="font-family: 'Cambria Math'; font-weight: bold;">Computers</a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card" style="width: 11rem; border-radius: 25px;">
                <div class="card-body text-center">
                    <img src="~/Images/guitar123.png" height="25" width="25" alt="Logo" />
                    <br />
                    <a class="card-text" href="@Url.Action("Main", "Home" , new {category="Musical Instruments"})" style="font-family: 'Cambria Math'; font-weight: bold;">Musical Items</a>
                </div>
            </div>

        </div>
    </div>
    <hr />
  
        <div class="card mb-3" style="max-width: 540px;border-radius:20px;border-color:white;margin-left:280px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <a href="@Url.Action("Index", "Products")">
                        <img src="~/Images/sign-post.png" class="card-img" alt="...">
                    </a>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Post an AD to Spice up things</h5>
                        <blockquote class="blockquote mb-0">
                            <p>“12% of people marry because they are completely in love. 88% of people marry just so they are then liable for only half of their rent".</p>
                            <footer class="blockquote-footer"><cite title="Source Title">Mokokoma Mokhonoana</cite></footer>
                        </blockquote>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>
        </div>
    
    <div class="row">
        @for (int i = 0; i < Model.Count(); i += 1)
        {
            <div class="col-md-3">
                <div class="card card-body text-center border-dark" style="border-radius: 30px;">
                    <div class="card-title">
                        <h3 class="font-weight-bold">@Model[i].Brand</h3>
                        <h4 class="font-italic">@Model[i].Model</h4>
                    </div>
                    <div class="card-text">
                        <img src="/Images/@Model[i].ProductImage" class="img-fluid" height="200" width="180" /><br /><br />
                        <h4>@Model[i].ProductDescription</h4>
                        <h5 class="text-danger">Rs. @Model[i].RentalFee / @Model[i].RentalDuration</h5>
                    </div>
                    <a href="@Url.Action("AddtoCart", "Home",new {prod_id= Model[i].ProductId,prod_uid=Model[i].ProdUid,adtitle=Model[i].AdTitle,rentalfee=Model[i].RentalFee,rentalduration=Model[i].RentalDuration,proddesc=Model[i].ProductDescription,adimage=Model[i].ProductImage })" class="btn btn-warning">Rent <i class="fas fa-shopping-cart"></i></a>
                </div><br />
            </div>
        }
    </div>

